{
  "extends": "cci-tsconfig/tsconfig.base.json",
  "compilerOptions": {
    "paths": {
      "@src/*": ["src/*"]
    },
    "module": "commonjs",
    "target": "es2017",
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": "./",
    "typeRoots": ["./@types", "../../node_modules/@types"],
    "forceConsistentCasingInFileNames": false,
    "noFallthroughCasesInSwitch": false
  },
  "include": ["src/**/*.ts", "test/**/*.ts"]
}
